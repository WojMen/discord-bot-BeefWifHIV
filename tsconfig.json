{
  "compilerOptions": {
    /* Target and Module */
    "target": "ESNext", // Uses the latest JS features, but compatible with Node.js 16+
    "module": "NodeNext", // Enables native ESM support
    "moduleResolution": "NodeNext", // Ensures compatibility with Node's ESM resolution
    /* Node.js Library and Environment Support */
    "lib": ["ESNext"],

    /* Strict Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Support for ts-node */
    "esModuleInterop": true, // Enables compatibility with CommonJS modules
    "skipLibCheck": true, // Skip checking of library files for faster builds

    /* Source and Output Management */
    "outDir": "dist", // Directory for compiled JavaScript files
    "rootDir": "src" // Root directory of TypeScript files
  },
  "include": ["src/**/*.ts"], // Includes all TypeScript files in src
  "exclude": ["node_modules", "dist"] // Exclude these directories
}
